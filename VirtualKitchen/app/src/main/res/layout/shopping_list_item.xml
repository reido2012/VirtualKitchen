<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/defaultfood"
        android:id="@+id/list_shoppingimage"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.498" />

    <TextView
        android:text="TextView"
        android:layout_width="190dp"
        android:layout_height="26dp"
        android:id="@+id/list_foodname"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.496"
        app:layout_constraintLeft_toRightOf="@+id/list_shoppingimage"
        android:layout_marginLeft="2dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/delete"
        android:id="@+id/list_btn_deleteshoppinglist"
        android:scaleType="centerInside"
        android:onClick="deleteShoppinglistHandler"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.498"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@null"
        app:layout_constraintLeft_toRightOf="@+id/list_btn_addtokitchen"
        android:layout_marginLeft="8dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/add_to_kitchen"
        android:id="@+id/list_btn_addtokitchen"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.498"
        android:onClick="addToKitchenHandler"
        app:layout_constraintLeft_toRightOf="@+id/list_foodname"
        android:layout_marginLeft="2dp"
        android:background="@null" />


</android.support.constraint.ConstraintLayout>